@model MobileStore.Models.Branch

@{ ViewData["Title"] = "Edit"; }

<!-- Custom stlylesheet -->
<link type="text/css" rel="stylesheet" href="~/css/Branch/Branches.css" />
<link type="text/css" rel="stylesheet" href="~/css/model.css" />

<div class="section">
    <div class="container">
        <div class="section-title">
            <h3 class="title">Edit branch details</h3>
            <div class="create_edit_container">
                <form id="EditForm" asp-action="Edit" class="create_edit_form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input name="id" asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Lat" class="control-label"></label>
                        <input name="Lat" asp-for="Lat" class="input" />
                        <span asp-validation-for="Lat" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Long" class="control-label"></label>
                        <input name="Long" asp-for="Long" class="input" />
                        <span id="locspan" asp-validation-for="Long" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input Name="Name" asp-for="Name" class="input" />
                        <span id="namespan" asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="input" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="input" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telephone" class="control-label"></label>
                        <input asp-for="Telephone" class="input" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-checkbox">
                            <input asp-for="IsSaturday" type="checkbox" id="create-account">
                            <label for="create-account">
                                <span></span>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayNameFor(model => model.IsSaturday)
                            </label>
                        </div>
                    </div>
                    <div class='submit'>
                        <input id="EditButton" type="button" value="Save" class="primary-btn" />
                        <a asp-action="Index">Back to full list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
    <script src="~/js/Branch/validateEdit.js"></script>
}
