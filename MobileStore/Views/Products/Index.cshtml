<section class="latest-product-area padding-bottom">
    <div class="container">
        <div class="row product-btn d-flex justify-content-end align-items-end">
            <!-- Section Tittle -->
            <div class="col-xl-4 col-lg-5 col-md-5">
                <div class="section-tittle mb-30">
                    <h2>Latest Products</h2>
                </div>
            </div>
            <div class="col-xl-8 col-lg-7 col-md-7">
                <div class="properties__button f-right">
                    <!--Nav Button  -->
                    <nav>

                    </nav>
                    <!--End Nav Button  -->
                </div>
            </div>
        </div>
        <!-- Nav Card -->
        <div class="tab-content" id="nav-tabContent">
            <div class="col-md-6">
                <div class="product_list">
                    <div class="row">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if (item.Quantity <= 0)
                                    continue;

                                if (item.ProductType == "Phone")
                                {
            <div class="col-lg-6 col-sm-6">
                <div class="single_product_item">
                    <a asp-controller="Phones" asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.img.ToString()" class="img-fluid">
                    </a>
                    <h3>
                        <a asp-controller="Phones" asp-action="Details" asp-route-id="@item.Id">
                            @item.Company  @item.Name

                        </a>
                    </h3>
                    <p>@item.Price $</p>
                    @{ if (User.Identity.IsAuthenticated && User.Claims.ElementAt(3).Value == "Admin")
                        {
<p>
    <a asp-action="Edit" asp-route-id="@item.Id" style="color:black">Edit</a> |
    <a asp-action="Delete" asp-route-id="@item.Id" style="color:red">Delete</a>
</p> } }

                </div>
            </div> }

                                if (item.ProductType == "Pcs")
                                {
            <div class="col-lg-6 col-sm-6">
                <div class="single_product_item">
                    <a asp-controller="Pcs" asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.img.ToString()" class="img-fluid">
                    </a>
                    <h3>
                        <a asp-controller="Pcs" asp-action="Details" asp-route-id="@item.Id">
                            @item.Company  @item.Name

                        </a>
                    </h3>
                    <p>@item.Price $</p>
                    @{ if (User.Identity.IsAuthenticated && User.Claims.ElementAt(3).Value == "Admin")
                        {
<p>
    <a asp-action="Edit" asp-route-id="@item.Id" style="color:black">Edit</a> |
    <a asp-action="Delete" asp-route-id="@item.Id" style="color:red">Delete</a>
</p> } }

                </div>
            </div> }
                                if (item.ProductType == "Screens")
                                {
            <div class="col-lg-6 col-sm-6">
                <div class="single_product_item">
                    <a asp-controller="Screens" asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.img.ToString()" class="img-fluid">
                    </a>
                    <h3>
                        <a asp-controller="Screens" asp-action="Details" asp-route-id="@item.Id">
                            @item.Company  @item.Name

                        </a>
                    </h3>
                    <p>@item.Price $</p>
                    @{ if (User.Identity.IsAuthenticated && User.Claims.ElementAt(3).Value == "Admin")
                        {
<p>
    <a asp-action="Edit" asp-route-id="@item.Id" style="color:black">Edit</a> |
    <a asp-action="Delete" asp-route-id="@item.Id" style="color:red">Delete</a>
</p> } }

                </div>
            </div>}
                            }
                        }
                    </div>
                </div>
            </div>
            <!-- End Nav Card -->
        </div>
</section>



