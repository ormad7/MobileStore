@model MobileStore.Models.Pc

@{ ViewData["Title"] = "Delete"; }


<h3>Are you sure you want to delete this?</h3>
<div class="product_image_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="product_img_slide owl-carousel">
                    <div class="single_product_img">
                        <img src="@Model.img.ToString()">
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="single_product_text text-center">
                    <h3>
                        The @Model.Name @{ string kind; if (Model.Laptop) { kind = "Laptop"; } else { kind = "PC"; } } @kind
                        by @Model.Company<br /> for @Model.Price$ only!
                    </h3>
                    <p>
                        Specs:
                    </p>
                    <div>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Cpu)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Cpu)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Ram)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Ram) GB
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.GraphicsCard)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.GraphicsCard)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Storage)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Storage) GB
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Date)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Date)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Size)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Size)″
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div style="position:relative; left:630px;">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" style="color:black">Back to list</a>
    </form>
</div>
